<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/text_title_size"
    app:cardUseCompatPadding="true"
    app:cardElevation="@dimen/standard_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/standard_margin"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_item_fragment_coursename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_title_size"
                    android:textStyle="bold"
                    tools:text="Androidacademy course" />

                <TextView
                    android:id="@+id/course_item_fragment_lecturescount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"

                    tools:text="N lectures" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/standard_margin"
                android:src="@drawable/common_google_signin_btn_icon_dark" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
